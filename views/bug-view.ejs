  <!-- Begin Page Content -->
  <div class="container-fluid">

    <!-- Page Heading -->
    <!-- <h1 class="h3 mb-4 text-gray-800"> Single Bug </h1> -->
    <!-- TODO: Fix line abve -->
  </div>
  <!-- /.container-fluid -->
  <div class="row mt-5">
    <div class="col-lg-6 mx-auto">
      <div class="card shadow mb-4">
        <div class="card-header">
          <ul class="nav nav-pills card-header-pills">
            <li class="nav-item">
              <h5 class="nav-link pl-2 mb-0"> Bug View </h5>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/edit/<%= bug._id %> ">Edit</a>
            </li>
            <li class="nav-item ml-3">
              <a class="nav-link btn-danger" href="/delete/<%= bug._id %> ">Delete</a>
            </li>
          </ul>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col">
              <h3>Name</h3>
              <p>
                <%= bug.name %>
              </p>
              <br>
            </div>
            <div class="col">
              <h3>Time</h3>
              <p>
                <%= moment(bug.time).subtract(6, 'days' ).calendar(); %>
              </p>
            </div>
          </div>
          <h3>Description</h3>
          <p>
            <%= bug.description %>
          </p>
          <br>
          <div class="row">
            <div class="col">

              <h3>Importance</h3>
              <p>
                <%= bug.importance %>
              </p>

            </div>
            <div class="col">
              <h3>Assigned To</h3>
              <p>
                <%= bug.duty.name %>
              </p>
            </div>
          </div>


        </div>
      </div>
    </div>
  </div>
  </div>
  <%- include('partials/footer.ejs') %> 